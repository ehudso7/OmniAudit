{
  "name": "@omniaudit/cli",
  "version": "2.0.0",
  "description": "Comprehensive CLI for OmniAudit with interactive modes and beautiful TUI",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "bin": {
    "omniaudit": "./dist/index.js",
    "oa": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "type-check": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --apply ."
  },
  "keywords": ["omniaudit", "cli", "audit", "code-analysis"],
  "author": "OmniAudit Team",
  "license": "MIT",
  "dependencies": {
    "@omniaudit/reporters": "workspace:*",
    "@omniaudit/sdk": "workspace:*",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "enquirer": "^2.4.1",
    "cli-table3": "^0.6.3",
    "picocolors": "^1.0.0",
    "dotenv": "^16.4.1",
    "zod": "^3.22.4",
    "chokidar": "^3.6.0",
    "listr2": "^8.0.0",
    "boxen": "^7.1.1",
    "gradient-string": "^2.0.2",
    "cli-progress": "^3.12.0",
    "figures": "^6.1.0",
    "log-symbols": "^6.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/node": "^20.11.16",
    "@types/cli-progress": "^3.11.5",
    "tsup": "^8.0.1",
    "typescript": "^5.7.2",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
