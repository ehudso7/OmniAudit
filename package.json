{
  "name": "omniaudit-monorepo",
  "version": "2.0.0",
  "description": "Universal AI Coding Auditing Framework - Enterprise Monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "frontend",
    "vscode-extension",
    "github-app"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "biome format --write .",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "backend:dev": "cd backend && uvicorn src.omniaudit.api.main:app --reload",
    "backend:test": "cd backend && pytest tests/ -v",
    "prepare": "husky install"
  },
  "keywords": [
    "ai",
    "code-analysis",
    "optimization",
    "claude",
    "typescript",
    "performance",
    "security"
  ],
  "author": "OmniAudit Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.68.0",
    "@babel/parser": "^7.23.9",
    "@babel/traverse": "^7.23.9",
    "@babel/types": "^7.23.9",
    "@libsql/client": "^0.15.15",
    "@upstash/redis": "^1.28.4",
    "@pinecone-database/pinecone": "^2.0.1",
    "@sentry/bun": "^7.99.0",
    "@vercel/node": "^3.0.21",
    "zod": "^3.22.4",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "enquirer": "^2.4.1",
    "picocolors": "^1.0.0",
    "dotenv": "^16.4.1",
    "eslint": "^9.0.0",
    "tsx": "^4.7.0",
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@cloudflare/workers-types": "^4.20240502.0",
    "@types/babel__traverse": "^7.20.5",
    "@types/node": "^20.11.16",
    "typescript": "^5.7.2",
    "turbo": "^1.12.0",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "tsup": "^8.0.1",
    "vitest": "^1.2.2"
  },
  "engines": {
    "bun": ">=1.1.0",
    "node": "20.x"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": ["biome check --apply", "biome format --write"]
  }
}
