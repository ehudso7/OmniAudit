{
  "name": "omniaudit",
  "version": "1.0.0",
  "description": "Universal AI Coding Optimization Framework with Advanced Skills System",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "omniaudit": "./dist/cli/omniaudit.js"
  },
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "cli": "bun run src/cli/omniaudit.ts",
    "db:migrate": "bun run src/db/migrate.ts",
    "db:seed": "bun run src/db/seed.ts",
    "test": "bun test",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "deploy": "wrangler deploy",
    "prepare": "husky install"
  },
  "keywords": [
    "ai",
    "code-analysis",
    "optimization",
    "claude",
    "typescript",
    "performance",
    "security"
  ],
  "author": "OmniAudit Team",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.30.1",
    "@babel/parser": "^7.23.9",
    "@babel/traverse": "^7.23.9",
    "@babel/types": "^7.23.9",
    "@libsql/client": "^0.5.6",
    "@upstash/redis": "^1.28.4",
    "@pinecone-database/pinecone": "^2.0.1",
    "@sentry/bun": "^7.99.0",
    "zod": "^3.22.4",
    "commander": "^12.0.0",
    "chalk": "^5.3.0",
    "ora": "^8.0.1",
    "enquirer": "^2.4.1",
    "picocolors": "^1.0.0",
    "dotenv": "^16.4.1",
    "eslint": "^9.0.0",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "@types/babel__traverse": "^7.20.5",
    "@types/node": "^20.11.16",
    "typescript": "^5.7.2",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "wrangler": "^3.28.4",
    "bun-types": "^1.1.0"
  },
  "engines": {
    "bun": ">=1.1.0",
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --apply",
      "biome format --write"
    ]
  }
}
