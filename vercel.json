{
  "version": 2,
  "builds": [
    {
      "src": "api/health.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/skills.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/analyze.ts",
      "use": "@vercel/node"
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb"
      }
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "api/health.ts"
    },
    {
      "src": "/api/skills",
      "dest": "api/skills.ts"
    },
    {
      "src": "/api/analyze",
      "dest": "api/analyze.ts"
    },
    {
      "src": "/api/v1/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "python-app:src"
  },
  "build": {
    "env": {
      "PYTHONPATH": "python-app:src"
    }
  }
}
