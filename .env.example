# Anthropic AI
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Turso Database
TURSO_URL=libsql://your-database.turso.io
TURSO_TOKEN=your_turso_auth_token_here

# Upstash Redis
UPSTASH_URL=https://your-redis.upstash.io
UPSTASH_TOKEN=your_upstash_token_here

# Pinecone Vector DB
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX=skills

# Sentry (Optional)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development

# GitHub (Optional - for integrations)
GITHUB_TOKEN=your_github_token_here

# Snyk (Optional - for security scanning)
SNYK_API_KEY=your_snyk_api_key_here

# Cloudflare (for deployment)
CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id
CLOUDFLARE_API_TOKEN=your_cloudflare_api_token

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=info
